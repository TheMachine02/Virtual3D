vxTextureShader:
	.db	VX_PIXEL_SHADER
	.db	vxTextureEnd-vxTextureCode
	.db	2	; two pixel are written per loop
	.db	10	; total size of per pixel code
.relocate	VX_PIXEL_SHADER_CODE
vxTextureCode:
	ld	a, h
	add	hl, sp
	exx
	ld	h, a
	ld	a, (hl)
	adc	hl, bc
	exx
	ld	(de), a
	inc	de
	ld	a, h
	add	hl, sp
	exx
	ld	h, a
	ld	a, (hl)
	adc	hl, bc
	exx
	ld	(de), a
	inc	de
	djnz	vxTextureCode
vxTextureEnd:
.endrelocate
